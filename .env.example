# ==========================================
# Swasthya Environment Configuration
# ==========================================

# --- Core Infrastructure ---
# PostgreSQL Credentials (Operational Data)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=swasthya_db
POSTGRES_HOST=swasthya-postgres
POSTGRES_PORT=5432

# MLflow Tracking Server (Model Registry & Metadata)
MLFLOW_DB_USER=mlflow_user
MLFLOW_DB_PASSWORD=mlflow_password
MLFLOW_DB_NAME=mlflow_db
MLFLOW_PORT=5000
MLFLOW_TRACKING_URI=http://swasthya-mlflow:5000

# --- Orchestrator ---
ORCHESTRATOR_PORT=3000
NODE_ENV=development
# Security: In production, this would be a high-entropy secret for signing JWTs
API_SECRET_KEY=dev_secret_key_change_in_production

# --- Agent Service Ports (Internal Docker Network & Host Mapping) ---
PORT_DEMAND_FORECAST=8001
PORT_STAFF_SCHEDULING=8002
PORT_EROR_SCHEDULING=8003
PORT_DISCHARGE_PLANNING=8004
PORT_TRIAGE_ACUITY=8005

# --- Federated Learning Configuration ---
# FL Servers
FL_TRIAGE_PORT=8086
FL_DEMAND_PORT=8087

# FL Settings (Common)
FL_MIN_CLIENTS=2
FL_ROUNDS=5
