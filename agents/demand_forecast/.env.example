# =============================================================================
# DEMAND FORECAST AGENT - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and customize for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# SERVICE CONFIGURATION
# -----------------------------------------------------------------------------
SERVICE_NAME=demand-forecast-agent
SERVICE_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/hospital_ai
DB_POOL_SIZE=5
DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# MLFLOW
# -----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=demand_forecast
MLFLOW_MODEL_REGISTRY_NAME=demand-forecast-prophet

# -----------------------------------------------------------------------------
# FEDERATED LEARNING
# -----------------------------------------------------------------------------
FL_SERVER_ADDRESS=fl-demand-server:8087
FL_ENABLED=true
FL_MIN_FIT_CLIENTS=2
FL_LOCAL_EPOCHS=3

# -----------------------------------------------------------------------------
# PROPHET MODEL CONFIGURATION
# -----------------------------------------------------------------------------
PROPHET_YEARLY_SEASONALITY=true
PROPHET_WEEKLY_SEASONALITY=true
PROPHET_DAILY_SEASONALITY=true
PROPHET_CHANGEPOINT_PRIOR_SCALE=0.05
PROPHET_SEASONALITY_PRIOR_SCALE=10.0

# Forecast defaults
FORECAST_HORIZON_HOURS=168  # 7 days
FORECAST_FREQUENCY=H        # H=hourly, D=daily

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=1
DEBUG=false

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json, text

# -----------------------------------------------------------------------------
# HOSPITAL IDENTIFICATION (for Federated Learning)
# -----------------------------------------------------------------------------
HOSPITAL_ID=hospital_main
