# =============================================================================
# Discharge Planning Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment.
# All values shown are defaults.
# =============================================================================

# -----------------------------------------------------------------------------
# SERVICE IDENTIFICATION
# -----------------------------------------------------------------------------
SERVICE_NAME=discharge-planning-agent
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/hospital_ai
DB_POOL_SIZE=5
DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# MODEL CONFIGURATION
# -----------------------------------------------------------------------------
# XGBoost hyperparameters
XGB_N_ESTIMATORS=100
XGB_MAX_DEPTH=6
XGB_LEARNING_RATE=0.1
XGB_MIN_CHILD_WEIGHT=1

# Model file path
MODEL_PATH=/app/models/discharge_readiness.json

# -----------------------------------------------------------------------------
# CLINICAL RULE ENGINE THRESHOLDS
# -----------------------------------------------------------------------------
# Vital sign thresholds
FEVER_THRESHOLD_CELSIUS=38.0
TACHYCARDIA_THRESHOLD=100
BRADYCARDIA_THRESHOLD=50
HYPOXIA_THRESHOLD=92.0
HYPOTENSION_SYSTOLIC_THRESHOLD=90
HYPERTENSION_SYSTOLIC_THRESHOLD=180

# Lab value thresholds
WBC_HIGH_THRESHOLD=11.0
WBC_LOW_THRESHOLD=4.0
HEMOGLOBIN_LOW_THRESHOLD=7.0
CREATININE_HIGH_THRESHOLD=2.0
POTASSIUM_LOW_THRESHOLD=3.0
POTASSIUM_HIGH_THRESHOLD=5.5

# Readiness score thresholds
READINESS_SCORE_HIGH_THRESHOLD=0.7
READINESS_SCORE_MEDIUM_THRESHOLD=0.4

# -----------------------------------------------------------------------------
# OPERATIONAL RULES
# -----------------------------------------------------------------------------
MIN_LOS_HOURS_EMERGENCY=24
MIN_LOS_HOURS_SURGICAL=48
MIN_LOS_HOURS_OBSERVATION=6

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8004
API_WORKERS=1
DEBUG=false

# -----------------------------------------------------------------------------
# ORCHESTRATOR INTEGRATION
# -----------------------------------------------------------------------------
ORCHESTRATOR_URL=http://orchestrator:3000
ORCHESTRATOR_CALLBACK_ENABLED=true

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
