# ER/OR Scheduling Agent Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8003
DEBUG=false

# Model Configuration
MODEL_PATH=./models/duration_predictor.json
RETRAIN_ON_STARTUP=true

# OR Scheduling Parameters
DEFAULT_OR_COUNT=4
DEFAULT_BLOCK_DURATION_MINUTES=480
MAX_SOLVER_TIME_SECONDS=30
SCHEDULING_HORIZON_DAYS=7

# Acuity Weights (higher = more urgent)
ACUITY_WEIGHT_CRITICAL=100
ACUITY_WEIGHT_EMERGENT=75
ACUITY_WEIGHT_URGENT=50
ACUITY_WEIGHT_LESS_URGENT=25
ACUITY_WEIGHT_NON_URGENT=10

# Buffer time between surgeries (minutes)
SURGERY_BUFFER_MINUTES=30
CLEANUP_TIME_MINUTES=15

# Logging
LOG_LEVEL=INFO

# Orchestrator Connection
ORCHESTRATOR_URL=http://orchestrator:3000
